# ☁️ CONFIGURACIÓN PARA PRODUCCIÓN EN GCP
# Este archivo debe estar en tu .gitignore para no subirlo al repositorio

# Tipo de entorno
FLASK_ENV=production
ENVIRONMENT=production

# Base de datos en Cloud SQL (usar variables de entorno de Cloud Run)
# Esta variable se configurará directamente en Cloud Run, no en este archivo
# DATABASE_URL se configurará vía gcloud run services update

# Configuración Flask para producción
# SECRET_KEY se configurará directamente en Cloud Run vía variables de entorno
FLASK_DEBUG=False

# URLs de producción
BASE_URL=https://tickethome-demo-gkey6epc6q-uc.a.run.app

# Logging para producción
LOG_LEVEL=INFO

# Variables específicas para producción
SKIP_AUTH_FOR_TESTING=False
ENABLE_SQL_LOGGING=False

# IMPORTANTE:
# - Las variables sensibles (DATABASE_URL, SECRET_KEY) NO van aquí
# - Se configuran directamente en Cloud Run usando gcloud CLI
# - Este archivo solo contiene configuraciones no sensibles